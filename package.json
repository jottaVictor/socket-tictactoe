{
  "name": "socket-tictactoe",
  "type": "module",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file .env ./dist/src/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch 'dist/**/*.js' --exec 'npm start'\"",
    "dev2": "concurrently \"tsc --watch\" \"nodemon --watch 'src/**/*.ts' --exec 'npm start'\"",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "env-var": "^7.5.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@types/ws": "^8.18.0",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.2"
  },
  "imports": {
    "#utils/*": "./dist/src/utils/*",
    "#interfaces/*": "./dist/src/interfaces/*",
    "#src/*": "./dist/src/*",
    "#r/*": "./*"
  }
}
